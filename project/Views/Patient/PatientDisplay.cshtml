@model FHIR_FIT3077.ViewModels.PatientDetailsViewModel;
@{
    ViewData["Title"] = "PatientDisplay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Patient Details</h1>
<h1>@Model.Name</h1>
<table>
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Birthdate</td>
        <td>@Model.Birthdate</td>
    </tr>
    <tr>
        <td>Gender</td>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <td>Address</td>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <td>City</td>
        <td>@Model.City</td>
    </tr>
    <tr>
        <td>State</td>
        <td>@Model.State</td>
    </tr>
    <tr>
        <td>Country</td>
        <td>@Model.Country</td>
    </tr>
</table>
