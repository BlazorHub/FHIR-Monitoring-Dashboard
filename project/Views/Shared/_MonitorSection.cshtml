@model FHIR_FIT3077.ViewModel.PatientViewModel;

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Cholesterol</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.MonitorList.Count > 0)
        {
            var max = Convert.ToDouble(ViewData["max"]);
            @foreach (var item in Model.MonitorList)
            {
                var value = Convert.ToDouble(item.Records[0].Value);
                if (value == max && Model.MonitorList.Count > 1)
                {
                    <tr>
                        <td><span style="color:red">@item.Name</span></td>
                        <td><span style="color:red">@item.Records[0].Value</span></td>
                        <td><span style="color:red">@item.Records[0].Date</span></td>
                    </tr>

                }
                else
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Records[0].Value</td>
                        <td>@item.Records[0].Date</td>
                    </tr>
                }


            }

        }
    </tbody>
</table>
