@using FIT3077.Shared.Models
<div>
    <EditForm Model="@parameter" class="input-group px-3">
        <InputText class="px-2" placeholder="5 minutes" @bind-Value="parameter.Value" />
        <div class="input-group-append">
            <button class="btn btn btn-outline-light " @onclick="() => OnSetTime.InvokeAsync(parameter.Value)">Set</button>
            
        </div>
    </EditForm>
</div>
@code {
    [Parameter]
    public EventCallback<string> OnSetTime { get; set; }


    private SearchParameter parameter = new SearchParameter();



}
